	@EventHandler
	public void onJoin(PlayerJoinEvent e){
		
		e.getPlayer().getInventory().clear();
		
		
		ItemStack Hats = new ItemStack(Material.DIAMOND_HELMET, 1);
		ItemMeta Hatsm = Hats.getItemMeta();
		Hatsm.setDisplayName(ChatColor.GREEN + "Hats");
		Hats.setItemMeta(Hatsm);
		
		
		ItemStack Part = new ItemStack(Material.APPLE, 1);
		ItemMeta Partm = Part.getItemMeta();
		Partm.setDisplayName(ChatColor.GOLD + "Particles Menu (VIP ONLY)");
		Part.setItemMeta(Partm);
		
		
		
		
		e.getPlayer().getInventory().addItem(new ItemStack(Hats));
		
		e.getPlayer().getInventory().addItem(new ItemStack(Part));
		
		e.getPlayer().chat("/pet selector");
	}
	
	@EventHandler(priority=EventPriority.HIGH)
	public void onPlayerUse(PlayerInteractEvent event){
	    Player p = event.getPlayer();
	 
	    if(p.getItemInHand().getType() == Material.DIAMOND_HELMET){
	    	p.chat("/hats");
	    }
	    if(p.getItemInHand().getType() == Material.APPLE){
	    	p.chat("/particles");
